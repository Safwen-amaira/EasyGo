
{% for vehicule in vehicules %}
    <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
            {% if vehicule.image %}
                <img src="{{ asset('uploads/vehicules/' ~ vehicule.image) }}" class="card-img-top" alt="{{ vehicule.name }}" style="height: 200px; object-fit: cover;">
            {% else %}
                <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                    <span class="text-white">Aucune image disponible</span>
                </div>
            {% endif %}
            
            <div class="card-body">
                <h5 class="card-title">{{ vehicule.name }}</h5>
                <p class="text-muted">{{ vehicule.color }}</p>
                
                <div class="d-flex justify-content-between align-items-center mb-2">
                  
                    <h4 class="text-success mb-0">{{ vehicule.prix }}€</h4>
                </div>
                
                <p class="card-text">
                    {{ vehicule.content|length > 100 ? vehicule.content|slice(0, 100) ~ '...' : vehicule.content }}
                </p>
            </div>
            
            <div class="card-footer bg-white border-top-0">
                <div class="d-flex justify-content-between">
                    <a href="{{ path('app_vehicule_showw', {'id': vehicule.id}) }}" class="btn btn-outline-info btn-sm">
                        <i class="fas fa-info-circle"></i> Détails
                    </a>
                    <a class="btn btn-primary btn-sm">
                        <i class="fas fa-calendar-check"></i> Réserver
                    </a>
                </div>
            </div>
        </div>
    </div>
{% else %}
    <div class="col-12">
        <div class="alert alert-info text-center">
            Aucun véhicule trouvé
        </div>
    </div>
{% endfor %}