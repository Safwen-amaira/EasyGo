<script>
    const user = JSON.parse(localStorage.getItem('user'));
    if (!user) {
        window.location.href = '/auth';
    }

    {% if role == 'admin' %}
    if (!user.isAdmin) {
        window.location.href = '/auth';
    }
    {% elseif role == 'driver' %}
    if (!user.isDriver) {
        window.location.href = '/auth';
    }
    {% elseif role == 'rider' %}
    if (!user.isRider) {
        window.location.href = '/auth';
    }
    {% endif %}
</script>
