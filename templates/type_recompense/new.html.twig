{% extends 'admin/dashboard.html.twig' %}

{% block title %}➕ Nouveau Type de Récompense{% endblock %}

{% block content %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4 p-4">
                <h2 class="text-center mb-4 text-gradient fw-bold">➕ Ajouter un Type de Récompense</h2>

                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }} <!-- Disable HTML5 validation -->
                    <div class="row g-3">
                        {% for field in form %}
                            <div class="col-md-12">
                                <label class="form-label fw-semibold">{{ form_label(field) }}</label>
                                
                                {# Render the form widget and errors #}
                                {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(field, {'attr': {'class': 'text-danger'}}) }}
                            </div>
                        {% endfor %}
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-success px-4 py-2 rounded-pill shadow-sm">✅ Enregistrer</button>
                    </div>
                {{ form_end(form) }}

                <div class="text-center mt-3">
                    <a href="{{ path('type_recompense_index') }}" class="btn btn-outline-secondary rounded-pill">⬅️ Retour à la liste</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .text-gradient {
        background: linear-gradient(to right, #3a8ee6, #7b5de3);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
</style>
{% endblock %}
