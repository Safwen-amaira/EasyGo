{% extends 'base.html.twig' %}

{% block title %}🗂️ Types de Récompenses{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold">🗂️ Types de Récompenses</h2>
        <a href="{{ path('type_recompense_new') }}" class="btn btn-outline-primary rounded-pill">➕ Ajouter</a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped shadow-sm">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Statut</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for type in types %}
                    <tr>
                        <td>{{ type.id }}</td>
                        <td>{{ type.nom }}</td>
                        <td>{{ type.description|default('—') }}</td>
                        <td>
                            {% if type.actif %}
                                <span class="badge bg-success">Actif</span>
                            {% else %}
                                <span class="badge bg-secondary">Inactif</span>
                            {% endif %}
                        </td>
                        <td class="text-center">
                            <a href="{{ path('type_recompense_edit', { id: type.id }) }}" class="btn btn-sm btn-outline-primary">✏️ Modifier</a>
                            <a href="{{ path('type_recompense_delete', { id: type.id }) }}" class="btn btn-sm btn-outline-danger"
                               onclick="return confirm('Supprimer ce type ?');">🗑️ Supprimer</a>
                            <a href="{{ path('type_recompense_toggle', { id: type.id }) }}" class="btn btn-sm btn-outline-warning">🔁 Toggle</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center text-muted">Aucun type trouvé.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
