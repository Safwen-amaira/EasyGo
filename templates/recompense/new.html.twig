{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg rounded-4 border-0 p-4">
                <h2 class="text-center mb-4 text-gradient fw-bold">üéÅ Cr√©er une nouvelle r√©compense</h2>

                {{ form_start(form) }}
