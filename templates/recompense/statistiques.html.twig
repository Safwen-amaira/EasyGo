{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>

    <script>
        window.addEventListener('load', () => {
            const ctx = document.getElementById('pointsChart').getContext('2d');
            const chart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: [
                        {% for user in topUsers %}
                            "{{ user.nomUtilisateur }}"{% if not loop.last %},{% endif %}
                        {% endfor %}
                    ],
                    datasets: [{
                        label: 'Points accumulÃ©s',
                        data: [
                            {% for user in topUsers %}
                                {{ user.points_accumules }}{% if not loop.last %},{% endif %}
                            {% endfor %}
                        ],
                        backgroundColor: 'rgba(54, 162, 235, 0.7)',
                        borderRadius: 5,
                        barPercentage: 0.6
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });

            window.downloadChart = function () {
                html2canvas(document.getElementById('pointsChart')).then(canvas => {
                    const link = document.createElement('a');
                    link.download = 'statistiques-points.jpg';
                    link.href = canvas.toDataURL('image/jpeg');
                    link.click();
                });
            }
        });
    </script>
