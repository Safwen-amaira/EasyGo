{% extends 'admin/dashboard.html.twig' %}

{% block title %}üéÅ Liste des R√©compenses{% endblock %}

{% block content %}
<div class="container py-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold">üéÅ R√©compenses Fid√©lit√©</h2>
        <a href="{{ path('recompense_new') }}" class="btn btn-outline-primary rounded-pill">‚ûï Ajouter</a>
    </div>
    <a href="{{ path('recompense_statistiques') }}" class="btn btn-outline-info mb-4">üìà Voir les statistiques</a>
    <a href="/admin/dashboard" class="btn btn-outline-info mb-4">Return to Dashboard</a>

    <form method="get" class="row g-2 align-items-center mb-4" id="filter-form">
        <div class="col-sm-4">
            <input type="text" name="search" id="search" value="{{ search }}" class="form-control" placeholder="üîç Rechercher une description...">
        </div>
        <div class="col-sm-3">
            <input type="text" name="type" id="type-filter" class="form-control" placeholder="Filtrer par type">
        </div>
        <div class="col-sm-3">
            <input type="text" name="user" id="user-filter" class="form-control" placeholder="Filtrer par utilisateur">
        </div>
    </form>


    <div id="recompense-results">
        <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
            <table class="table table-striped table-bordered align-middle shadow-sm">
                <thead class="table-light">
                    <tr>
                        <th><a href="#" class="sort" data-sort="id">#</a></th>
                        <th><a href="#" class="sort" data-sort="description">Description</a></th>
                        <th><a href="#" class="sort" data-sort="points_requis">Points</a></th>
                        <th>Type</th>
                        <th><a href="#" class="sort" data-sort="date_expiration">Expiration</a></th>
                        <th>Utilisateur</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody id="recompense-body">
                    {% for recompense in recompenses %}
                        <tr>
                            <td>{{ recompense.id }}</td>
                            <td>{{ recompense.description|default('‚Äî') }}</td>
                            <td><span class="badge bg-warning text-dark">{{ recompense.pointsRequis }}</span></td>
                            <td>
                                <span class="badge bg-info text-white">
                                    {{ recompense.typeRecompense ? recompense.typeRecompense.nom : '‚Äî' }}
                                </span>
                            </td>
                            <td>{{ recompense.dateExpiration ? recompense.dateExpiration|date('d/m/Y') : '‚Äî' }}</td>
                            <td>{{ recompense.utilisateurfidelite ? recompense.utilisateurfidelite.nomUtilisateur : '‚Äî' }}</td>
                            <td class="text-center">
                                <a href="{{ path('recompense_edit', {id: recompense.id}) }}" class="btn btn-sm btn-outline-primary">‚úèÔ∏è</a>
<a href="{{ path('recompense_delete', {id: recompense.id}) }}"
   onclick="return confirm('Are you sure you want to delete this reward?');"
   class="btn btn-danger">
   Delete
</a>

                            </td>
                        </tr>
                    {% else %}
                        <tr><td colspan="7" class="text-center text-muted">Aucune r√©compense trouv√©e.</td></tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

       {# ‚úÖ Beautiful Bootstrap pagination #}
{% if not app.request.isXmlHttpRequest %}
    <div class="d-flex justify-content-center mt-4">
        {{ knp_pagination_render(recompenses) }}
    </div>


</div>

        {% endif %}
    </div>
</div>

<script>
let currentDirection = 'ASC';
let currentSort = '';

function fetchRewards(page = 1) {
    const search = document.getElementById('search').value;
    const type = document.getElementById('type-filter').value;
    const user = document.getElementById('user-filter').value;

    const params = new URLSearchParams({
        search: search,
        sort: currentSort,
        direction: currentDirection,
        type: type,
        user: user,
        page: page
    });

    fetch(`?${params.toString()}`, {
        headers: { 'X-Requested-With': 'XMLHttpRequest' }
    })
    .then(response => response.json())
    .then(data => {
        const tbody = document.getElementById('recompense-body');
        tbody.innerHTML = '';

        if (data.length > 0) {
            data.forEach(r => {
                tbody.innerHTML += `
                    <tr>
                        <td>${r.id}</td>
                        <td>${r.description}</td>
                        <td><span class="badge bg-warning text-dark">${r.points}</span></td>
                        <td><span class="badge bg-info text-white">${r.type ?? '‚Äî'}</span></td>
                        <td>${r.expiration ?? '‚Äî'}</td>
                        <td>${r.user ?? '‚Äî'}</td>
                        <td class="text-center">
                            <a href="/recompense/${r.id}/edit" class="btn btn-sm btn-outline-primary">‚úèÔ∏è</a>
                            <a href="/recompense/${r.id}/delete" class="btn btn-sm btn-outline-danger">üóëÔ∏è</a>
                        </td>
                    </tr>`;
            });
        } else {
            tbody.innerHTML = `<tr><td colspan="7" class="text-center text-muted">Aucune r√©compense trouv√©e.</td></tr>`;
        }
    });
}

['search', 'type-filter', 'user-filter'].forEach(id =>
    document.getElementById(id).addEventListener('input', () => fetchRewards())
);

document.querySelectorAll('.sort').forEach(link => {
    link.addEventListener('click', function (e) {
        e.preventDefault();
        const sort = this.dataset.sort;
        currentDirection = (currentSort === sort && currentDirection === 'ASC') ? 'DESC' : 'ASC';
        currentSort = sort;
        fetchRewards();
    });
});
</script>
<style>
