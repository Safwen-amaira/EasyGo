{% extends 'base.html.twig' %}

{% block title %}Reclamation Index{% endblock %}

{% block css %}
  {{ parent() }}
  <style>
    /* ... ton style existant ... */
  </style>
{% endblock %}

{% block body %}
  <!-- Navbar only -->
  <header id="header" class="header d-flex align-items-center fixed-top">
    <div class="header-container container-fluid container-xl position-relative d-flex align-items-center justify-content-between">
      <a href="{{ path('app_reclamation_index') }}" class="logo d-flex align-items-center me-auto me-xl-0">
        <h1 class="sitename">EasyGo</h1>
      </a>
      <nav id="navmenu" class="navmenu">
        <ul>
          <li><a href="{{ path('app_reclamation_index') }}" class="active">Reclamations</a></li>
          <li><a href="{{ path('app_reclamation_new') }}">New Reclamation</a></li>
        </ul>
        <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
      </nav>
      <a class="btn-getstarted" href="{{ path('app_reclamation_new') }}">Get Started</a>
    </div>
  </header>

  <div class="container my-5">
    <h1 class="text-center mb-4">Reclamations</h1>
    <p class="text-center mb-5">Liste des réclamations</p>

    <div class="row g-4">
      {% for reclamation in reclamations %}
  <div class="col-lg-4 col-md-6">
    <div class="card reclamation-card h-100">
      <div class="card-body">
        <h5 class="card-title">Réclamation #{{ reclamation.id }}</h5>
        <h6 class="card-subtitle mb-2 text-muted">{{ reclamation.categorie }}</h6>
        <p><strong>Statut:</strong> {{ reclamation.statut }}</p>
        <p><strong>Date de création:</strong> {{ reclamation.dateCreation ? reclamation.dateCreation|date('Y-m-d H:i:s') : 'N/A' }}</p>

        <div class="details" style="display: none;">
          <p><strong>Description:</strong> {{ reclamation.description }}</p>

          <div class="feedback-section">
            <strong>Réponse(s):</strong>
            {% if reclamation.reponses|length > 0 %}
              {% for reponse in reclamation.reponses %}
                <div class="feedback-item">
                  <p>{{ reponse.contenu }}</p>
                  <small class="text-muted">
                    {{ reponse.dateCreation ? reponse.dateCreation|date('d/m/Y H:i') : 'Date inconnue' }}
                  </small>
                </div>
              {% endfor %}
            {% else %}
              <p>Aucune réponse fournie</p>
            {% endif %}
          </div>
        </div>

        <div class="d-flex justify-content-between mt-3">
          <a href="{{ path('app_reclamation_show', {'id': reclamation.id}) }}" class="btn btn-outline-primary">Show</a>
          <a href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}" class="btn btn-outline-secondary">Edit</a>
          {{ include('reclamation/_delete_form.html.twig') }}
        </div>
      </div>
    </div>
  </div>
{% else %}
  <div class="col-12">
    <div class="alert no-records-alert text-center" role="alert">
      No records found
    </div>
  </div>
{% endfor %}


    </div>

    <div class="mt-4 text-center">
      <a href="{{ path('app_reclamation_new') }}" class="btn create-new-btn">Create new</a>
    </div>
  </div>
{% endblock %}

{% block hero %}{% endblock %}
{% block about %}{% endblock %}
{% block features %}{% endblock %}
{% block pricing %}{% endblock %}
{% block contact %}{% endblock %}
