{% extends 'base.html.twig' %}

{% block title %}Reclamation Index{% endblock %}

{% block css %}
  {{ parent() }}
  <style>
    /* Style global du container */
    .container {
        background-color: #f8f9fa;
        padding-top: 50px;
        padding-bottom: 50px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    /* Barre de navigation des onglets */
    .nav-pills .nav-link {
        font-weight: bold;
        font-size: 1rem;
        color: #495057;
    }

    .nav-pills .nav-link.active {
        background-color: #007bff;
        color: #fff;
    }

    /* Style du titre principal */
    h1 {
        font-size: 2.5rem;
        font-weight: bold;
        color: #343a40;
    }

    /* Style du sous-titre */
    p.text-center.mb-5 {
        font-size: 1.1rem;
        color: #6c757d;
    }

    /* Formulaire de recherche */
    .search-form {
        margin-bottom: 30px;
        background-color: #fff;
        border-radius: 8px;
        padding: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .search-form .form-control {
        border-radius: 5px;
        box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
    }

    .search-form select {
        border-radius: 5px;
        box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
    }

    .search-form button {
        border-radius: 5px;
        font-weight: bold;
    }

    /* Style des cartes des réclamations */
    .reclamation-card {
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

    .reclamation-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }

    .reclamation-card .card-body {
        background-color: #ffffff;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: bold;
    }

    .card-subtitle {
        font-size: 1rem;
        color: #6c757d;
    }

    .card-text {
        font-size: 0.95rem;
        line-height: 1.5;
        color: #495057;
    }

    /* Style des boutons */
    .btn {
        border-radius: 5px;
        font-weight: bold;
    }

    .btn-outline-primary {
        border: 1px solid #007bff;
        color: #007bff;
        background-color: transparent;
    }

    .btn-outline-primary:hover {
        background-color: #007bff;
        color: #fff;
    }

    .btn-outline-secondary {
        border: 1px solid #6c757d;
        color: #6c757d;
        background-color: transparent;
    }

    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: #fff;
    }

    .create-new-btn {
        background-color: #28a745;
        color: #fff;
        font-size: 1.1rem;
        padding: 12px 30px;
        border-radius: 5px;
        font-weight: bold;
    }

    .create-new-btn:hover {
        background-color: #218838;
        color: #fff;
    }

    /* Pagination */
    .pagination-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .pagination-wrapper .pagination {
        margin-top: 20px;
    }

    /* Alerte "Aucun enregistrement trouvé" */
    .no-records-alert {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
        padding: 10px;
        font-weight: bold;
    }
  </style>
{% endblock %}

{% block body %}
  <!-- Navbar only -->
  <header id="header" class="header d-flex align-items-center fixed-top">
    {# … inchangé … #}
  </header>

  <div class="container my-5">
    
    <!-- Barre d’onglets -->
    <nav class="nav nav-pills justify-content-center mb-4">
      <a class="nav-link {% if app.request.attributes.get('_route') == 'app_feedback_index' %}active{% endif %}" href="{{ path('app_feedback_index') }}">Feedback</a>
      <a class="nav-link {% if app.request.attributes.get('_route') == 'app_reclamation_index' %}active{% endif %}" href="{{ path('app_reclamation_index') }}">Réclamations</a>
    </nav>

    <h1 class="text-center mb-4">Réclamations</h1>
    <p class="text-center mb-5">Liste des réclamations</p>

    <!-- Formulaire de recherche et de tri -->
    <form method="get" class="search-form">
      <div class="row">
        <div class="col">
          <input type="text" name="search" value="{{ search }}" class="form-control" placeholder="Recherche...">
        </div>
        <div class="col">
          <select name="sortField" class="form-control">
            <option value="dateCreation" {% if sortField == 'dateCreation' %}selected{% endif %}>Date de création</option>
            <option value="categorie" {% if sortField == 'categorie' %}selected{% endif %}>Catégorie</option>
          </select>
        </div>
        <div class="col">
          <select name="sortDirection" class="form-control">
            <option value="ASC" {% if sortDirection == 'ASC' %}selected{% endif %}>Ascendant</option>
            <option value="DESC" {% if sortDirection == 'DESC' %}selected{% endif %}>Descendant</option>
          </select>
        </div>
        <div class="col">
          <button type="submit" class="btn btn-primary">Filtrer</button>
        </div>
      </div>
    </form>

    <!-- Affichage des réclamations -->
    <div class="row g-4">
      {% for reclamation in pagination %}
        <div class="col-lg-4 col-md-6">
          <div class="card reclamation-card h-100">
            <div class="card-body">
              <h5 class="card-title">Réclamation #{{ reclamation.id }}</h5>
              <h6 class="card-subtitle mb-2 text-muted">{{ reclamation.categorie }}</h6>
              <p class="card-text">
                <strong>Statut:</strong> {{ reclamation.statut }}<br>
                <strong>Date de création:</strong>
                {{ reclamation.dateCreation ? reclamation.dateCreation|date('Y-m-d H:i:s') : 'N/A' }}
              </p>

              <div class="d-flex justify-content-between mt-3">
                <a href="{{ path('app_reclamation_show', {'id': reclamation.id}) }}" class="btn btn-outline-primary">Show</a>
                <a href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}" class="btn btn-outline-secondary">Edit</a>
                {{ include('reclamation/_delete_form.html.twig') }}
              </div>
            </div>
          </div>
        </div>
      {% else %}
        <div class="col-12">
          <div class="alert no-records-alert text-center" role="alert">
            Aucun enregistrement trouvé
          </div>
        </div>
      {% endfor %}
    </div>

    <!-- Pagination -->
    <div class="pagination-wrapper text-center mt-4">
      {{ knp_pagination_render(pagination) }}
    </div>

    <!-- Bouton de création -->
    <div class="mt-4 text-center">
      <a href="{{ path('app_reclamation_new') }}" class="btn create-new-btn">Créer une nouvelle réclamation</a>
    </div>
  </div>
{% endblock %}
