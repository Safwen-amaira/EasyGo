{% extends 'base.html.twig' %}

{% block title %}Reclamation Index{% endblock %}

{% block css %}
  {{ parent() }}
  <style>
    .reclamation-card {
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      border: none;
      border-radius: 10px;
      background: linear-gradient(135deg, #ffffff, #f8f9fa);
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    .reclamation-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
    }
    .reclamation-card .card-title {
      font-size: 1.25rem;
      font-weight: 600;
      color: rgb(0, 0, 0);
      margin-bottom: 0.5rem;
    }
    .reclamation-card .card-subtitle {
      font-size: 1rem;
      color: rgb(122, 178, 17);
      margin-bottom: 1rem;
    }
    .reclamation-card .card-text {
      font-size: 0.9rem;
      color: #34495e;
      line-height: 1.6;
    }
    .reclamation-card .card-text strong {
      color: #2980b9;
    }
    .reclamation-card .btn {
      padding: 0.4rem 1rem;
      font-size: 0.85rem;
      border-radius: 5px;
    }
    .reclamation-card .btn-outline-primary {
      border-color: #3498db;
      color: #3498db;
    }
    .reclamation-card .btn-outline-primary:hover {
      background-color: #3498db;
      color: #fff;
    }
    .reclamation-card .btn-outline-secondary {
      border-color: #7f8c8d;
      color: #7f8c8d;
    }
    .reclamation-card .btn-outline-secondary:hover {
      background-color: #7f8c8d;
      color: #fff;
    }
    .reclamation-card .btn-outline-danger {
      border-color: #dc3545;
      color: #dc3545;
    }
    .reclamation-card .btn-outline-danger:hover {
      background-color: #dc3545;
      color: #fff;
    }
    .no-records-alert {
      border-radius: 10px;
      background-color: #ecf0f1;
      color: #7f8c8d;
      font-size: 1.1rem;
      padding: 1.5rem;
    }
    .create-new-btn {
      padding: 0.6rem 1.5rem;
      font-size: 1rem;
      border-radius: 5px;
      background-color: #2980b9;
      border: none;
    }
    .create-new-btn:hover {
      background-color: #3498db;
    }
    .star-rating .bi-star-fill {
      color: #f1c40f;
    }
    .star-rating .bi-star {
      color: #dcdcdc;
    }
    .feedback-section {
      margin-top: 1rem;
      padding-top: 1rem;
      border-top: 1px solid #e0e0e0;
    }
    .feedback-item {
      margin-bottom: 1rem;
    }
    body {
      background-color: #f8f9fa;
    }
  </style>
{% endblock %}

{% block body %}
  <!-- Navbar only -->
  <header id="header" class="header d-flex align-items-center fixed-top">
    <div class="header-container container-fluid container-xl position-relative d-flex align-items-center justify-content-between">
      <a href="{{ path('app_reclamation_index') }}" class="logo d-flex align-items-center me-auto me-xl-0">
        <h1 class="sitename">EasyGo</h1>
      </a>
      <nav id="navmenu" class="navmenu">
        <ul>
          <li><a href="{{ path('app_reclamation_index') }}" class="active">Reclamations</a></li>
          <li><a href="{{ path('app_reclamation_new') }}">New Reclamation</a></li>
        </ul>
        <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
      </nav>
      <a class="btn-getstarted" href="{{ path('app_reclamation_new') }}">Get Started</a>
    </div>
  </header>

  <!-- Simple page content -->
  <div class="container my-5">
    <h1 class="text-center mb-4">Reclamations</h1>
    <p class="text-center mb-5">Liste des réclamations</p>

    <div class="row g-4">
      {% for reclamation in reclamations %}
        <div class="col-lg-4 col-md-6">
          <div class="card reclamation-card h-100">
            <div class="card-body">
              <h5 class="card-title">Réclamation #{{ reclamation.id }}</h5>
              <h6 class="card-subtitle mb-2 text-muted">{{ reclamation.categorie }}</h6>
              <p class="card-text">
                <strong>Statut:</strong> {{ reclamation.statut }}<br>
                <strong>Description:</strong> {{ reclamation.description }}<br>
                <strong>Date de création:</strong> {{ reclamation.dateCreation ? reclamation.dateCreation|date('Y-m-d H:i:s') : 'N/A' }}
              </p>
               <p class="card-text">
                <strong>Réponse:</strong> {{ reclamation.reponse ? reclamation.reponse : 'Aucune réponse fournie' }}
              </p>
              <div class="d-flex justify-content-between">
                <a href="{{ path('app_reclamation_show', {'id': reclamation.id}) }}" class="btn btn-outline-primary">Show</a>
                <a href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}" class="btn btn-outline-secondary">Edit</a>
                {{ include('reclamation/_delete_form.html.twig') }}
              </div>
            </div>
          </div>
        </div>
      {% else %}
        <div class="col-12">
          <div class="alert no-records-alert text-center" role="alert">
            No records found
          </div>
        </div>
      {% endfor %}
    </div>

    <div class="mt-4 text-center">
      <a href="{{ path('app_reclamation_new') }}" class="btn create-new-btn">Create new</a>
    </div>
  </div>
{% endblock %}

{% block hero %}{% endblock %}
{% block about %}{% endblock %}
{% block features %}{% endblock %}
{% block pricing %}{% endblock %}
{% block contact %}{% endblock %}
{% block services %}{% endblock %}
