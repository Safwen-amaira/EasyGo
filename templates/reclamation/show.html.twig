{% extends 'base.html.twig' %}

{% block title %}Reclamation{% endblock %}

{% block body %}
    <h1>Reclamation Details</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reclamation.id }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ reclamation.categorie }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ reclamation.statut }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ reclamation.description }}</td>
            </tr>
            <tr>
                <th>DateCreation</th>
                <td>{{ reclamation.dateCreation ? reclamation.dateCreation|date('Y-m-d H:i:s') : 'N/A' }}</td>
            </tr>
            <tr>
                <th>Réponse(s)</th>
                <td>
                    {% if reclamation.reponses|length > 0 %}
                        <ul>
                            {% for reponse in reclamation.reponses %}
                                <li>
                                    <p>{{ reponse.contenu }}</p>
                                    <small class="text-muted">
                                        {{ reponse.dateCreation ? reponse.dateCreation|date('d/m/Y H:i') : 'Date inconnue' }}
                                    </small>
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <p>Aucune réponse fournie</p>
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <div class="mt-3">
        <a href="{{ path('app_reclamation_index') }}" class="btn btn-outline-primary">Back to list</a>
        <a href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}" class="btn btn-outline-secondary">
            <i class="fas fa-edit"></i> Edit
        </a>
        {{ include('reclamation/_delete_form.html.twig') }}
    </div>
{% endblock %}
