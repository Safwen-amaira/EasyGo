{% extends 'base.html.twig' %}

{% block title %}Vehicule Index{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Liste des véhicules</h1>
 
        <a href="{{ path('app_vehicule_new') }}" class="btn btn-success">Créer un nouveau véhicule</a>
      
  

        <input type="text" id="search" class="form-control mb-3" placeholder="Rechercher un véhicule...">

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                 
                    <th>Nom</th>
                    <th>Carburant</th>
                    <th>Créé</th>
                    <th>Image</th>
                    <th>Contenu</th>
                    <th>Couleur</th>
                    <th>Prix</th>
                    <th>Nombre de places</th>
                    <th>Catégorie</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="vehicule-table-body">
                {% for vehicule in vehicules %}
                    <tr>
                       
                        <td>{{ vehicule.name }}</td>
                        <td>{{ vehicule.carburant }}</td>
                        <td>{{ vehicule.created ? vehicule.created|date('Y-m-d') : '' }}</td>
                        <td>
                            {% if vehicule.image %}
                                <img src="{{ asset('uploads/vehicules/' ~ vehicule.image) }}" alt="{{ vehicule.name }}" style="max-width: 100px;">
                            {% else %}
                                <span>Aucune image</span>
                            {% endif %}
                        </td>
                        <td>{{ vehicule.content }}</td>
                        <td>{{ vehicule.color }}</td>
                        <td>{{ vehicule.prix }} €</td>
                        <td>{{ vehicule.nombrePlaces }}</td>
                        <td>{{ vehicule.categoriesId }}</td>
                        </td>
                        <td>
                            <a href="{{ path('app_vehicule_show', {'id': vehicule.id}) }}" class="btn btn-info btn-sm">Voir</a>
                            <a href="{{ path('app_vehicule_edit', {'id': vehicule.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                            {{ include('vehicule/_delete_form.html.twig', {'vehicule': vehicule}) }}
                           
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="11" class="text-center">Aucun véhicule trouvé</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <script>
        document.getElementById('search').addEventListener('input', function () {
            const searchValue = this.value;

            fetch('{{ path('app_vehicule_search') }}?search=' + encodeURIComponent(searchValue), {
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.text())
            .then(html => {
                document.getElementById('vehicule-table-body').innerHTML = html;
            });
        });
    </script>
{% endblock %}