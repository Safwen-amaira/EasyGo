{% extends 'base.html.twig' %}

{% block title %}Détails du véhicule{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Détails du véhicule</h1>

        <div class="card p-4 shadow-sm">
            <table class="table table-bordered">
                <tbody>
                    
                    <tr>
                        <th scope="row">Nom</th>
                        <td>{{ vehicule.name }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Carburant</th>
                        <td>{{ vehicule.carburant }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Date de création</th>
                        <td>{{ vehicule.created ? vehicule.created|date('Y-m-d') : 'Non spécifiée' }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Image</th>
                        <td>
                            {% if vehicule.image %}
                                <img src="{{ asset('uploads/vehicules/' ~ vehicule.image) }}" alt="{{ vehicule.name }}" style="max-width: 150px;" class="img-thumbnail">
                            {% else %}
                                <span class="text-muted">Aucune image</span>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">Description</th>
                        <td>{{ vehicule.content }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Couleur</th>
                        <td>{{ vehicule.color }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Prix</th>
                        <td>{{ vehicule.prix }} €</td>
                    </tr>
                    <tr>
                        <th scope="row">Nombre de places</th>
                        <td>{{ vehicule.nombrePlaces }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Catégorie</th>
                       
                        <td>{{ vehicule.categoriesId }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="mt-4 d-flex gap-2">
            <a href="{{ path('app_vehicule_index') }}" class="btn btn-secondary">Retour à la liste</a>
            <a href="{{ path('app_vehicule_edit', {'id': vehicule.id}) }}" class="btn btn-warning">Modifier</a>
            {{ include('vehicule/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
