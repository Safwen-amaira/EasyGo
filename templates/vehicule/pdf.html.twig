<!DOCTYPE html>
<html>
<head>
    <title>Liste des véhicules</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        h1 {
            text-align: center;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            border: 1px solid black;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h1>Liste des véhicules</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Créé</th>
                <th>Mis à jour</th>
                <th>Couleur</th>
                <th>Contenu</th>

                <th>Image</th>
                <th>Prix</th>
            </tr>
        </thead>
        <tbody>
            {% for vehicule in vehicules %}
                <tr>
                    <td>{{ vehicule.id }}</td>
                    <td>{{ vehicule.name }}</td>
                    <td>{{ vehicule.created ? vehicule.created|date('Y-m-d') : '' }}</td>
                    <td>{{ vehicule.updated ? vehicule.updated|date('Y-m-d') : '' }}</td>
                    <td>{{ vehicule.color }}</td>
                    <td>{{ vehicule.content }}</td>
<td><img src="{{ asset('uploads/vehicules/' ~ vehicule.image) }}" width="50"></td>
                    <td>{{ vehicule.prix }}€</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center">Aucun véhicule trouvé</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</body>
</html>
