{% extends 'admin/dashboard.html.twig' %}

{% block content %}
    <h1 style="margin-bottom: 25px; color: #2c3e50;">
        <i class="fas fa-users"></i> User Management
    </h1>
    
    <table class="data-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>CIN</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr>
                <td>{{ user.nom }} {{ user.prenom }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.cin }}</td>
                <td>
                    {% if user.isAdmin %}<span class="role-badge">Admin</span>{% endif %}
                    {% if user.isDriver %}<span class="role-badge">Driver</span>{% endif %}
                    {% if user.isRider %}<span class="role-badge">Rider</span>{% endif %}
                </td>
                <td>
                    <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-edit">
                        <i class="fas fa-edit"></i>
                        Edit
                    </a>
                    <form action="{{ path('admin_user_delete', {'id': user.id}) }}" method="POST" style="display: inline-block;">
                        <button type="submit" class="btn btn-delete" onclick="return confirm('Are you sure you want to delete this user?')">
                            <i class="fas fa-trash"></i>
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
