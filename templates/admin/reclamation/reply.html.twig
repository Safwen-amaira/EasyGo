{% extends 'base.html.twig' %}

{% block title %}Répondre à la réclamation{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="mb-4">
        <h2 class="text-center text-primary">Répondre à la réclamation #{{ reclamation.id }}</h2>
        <p class="text-center text-muted">Catégorie : <strong>{{ reclamation.categorie }}</strong> | Statut : <strong>{{ reclamation.statut }}</strong></p>
    </div>

    <div class="card mb-5 shadow-sm">
        <div class="card-body">
            <h4 class="card-title text-secondary mb-4">Nouvelle réponse</h4>
            {{ form_start(form) }}
                {{ form_row(form.contenu, {
                    label: 'Votre réponse',
                    attr: { class: 'form-control', placeholder: 'Écrivez votre réponse ici...' }
                }) }}
                <div class="mt-3">
                    <button class="btn btn-primary">Envoyer la réponse</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>

    <div>
        <h4 class="mb-3 text-secondary">Réponses précédentes</h4>

        {% for reponse in reclamation.reponses %}
            <div class="card mb-3 border-start border-4 border-success shadow-sm">
                <div class="card-body">
                    <p class="mb-1">{{ reponse.contenu|nl2br }}</p>
                    <small class="text-muted">Répondu le {{ reponse.dateCreation|date('d/m/Y ') }}</small>
                     <form method="post" action="{{ path('admin_reclamation_reply', {'id': reponse.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer cette réponse ?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete_reponse_' ~ reponse.id) }}">
            <button class="btn btn-sm btn-outline-danger mt-2">Supprimer</button>
        </form>
                </div>
            </div>
        {% else %}
            <div class="alert alert-info">Aucune réponse pour l’instant.</div>
        {% endfor %}
    </div>

    <div class="mt-4">
        <a href="{{ path('admin_reclamation_index') }}" class="btn btn-outline-secondary">← Retour à la liste des réclamations</a>
    </div>
</div>
{% endblock %}
