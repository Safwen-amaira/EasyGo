{% extends 'base.html.twig' %}

{% block title %}Modifier Feedback{% endblock %}

{% block body %}
<header id="header" class="header d-flex align-items-center fixed-top">
  <div class="header-container container-fluid container-xl position-relative d-flex align-items-center justify-content-between">
    <a href="{{ path('app_reclamation_index') }}" class="logo d-flex align-items-center me-auto me-xl-0">
      <h1 class="sitename">EasyGo</h1>
    </a>
   <nav id="navmenu" class="navmenu">
  <ul>
    <li><a href="{{ path('app_reclamation_index') }}">Réclamations</a></li>
    <li><a href="{{ path('app_reclamation_new') }}">Nouvelle Réclamation</a></li>
    <li><a href="{{ path('app_feedback_index') }}" class="{% if app.request.pathinfo == path('app_feedback_index') %}active{% endif %}">Feedback</a></li>
  </ul>
  <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
</nav>
    <a class="btn-getstarted" href="{{ path('app_reclamation_new') }}">Get Started</a>
  </div>
</header>

<div class="container py-5" style="margin-top: 100px;"> 
  <div class="row justify-content-center">
    <div class="col-lg-6">

      <h1 class="text-center mb-5">✏️ Modifier Feedback</h1>

      <div class="card shadow-sm p-4">
        {{ form_start(form) }}

          <div class="mb-4">
            {{ form_label(form.note, 'Note', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.note, {'attr': {'class': 'form-control'}}) }}
          </div>

          <div class="mb-4">
            {{ form_label(form.commentaire, 'Commentaire', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.commentaire, {'attr': {'class': 'form-control', 'rows': '4'}}) }}
          </div>

          <div class="d-grid">
            <button type="submit" class="btn btn-primary btn-lg">
              <i class="fas fa-save me-2"></i> Sauvegarder
            </button>
          </div>

        {{ form_end(form) }}
      </div>

      <div class="text-center mt-4">
        <a href="{{ path('app_feedback_index') }}" class="btn btn-outline-secondary">
          <i class="bi bi-arrow-left me-1"></i> Retour à la liste
        </a>
      </div>

    </div>
  </div>
</div>
{% endblock %}

{% block hero %}{% endblock %}
{% block about %}{% endblock %}
{% block features %}{% endblock %}
{% block pricing %}{% endblock %}
{% block contact %}{% endblock %}
{% block services %}{% endblock %}
