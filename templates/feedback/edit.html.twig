{% extends 'base.html.twig' %}

{% block title %}Edit Feedback{% endblock %}

{% block body %}
  <header id="header" class="header d-flex align-items-center fixed-top">
    <div class="header-container container-fluid container-xl position-relative d-flex align-items-center justify-content-between">
      <a href="{{ path('app_reclamation_index') }}" class="logo d-flex align-items-center me-auto me-xl-0">
        <h1 class="sitename">EasyGo</h1>
      </a>
      <nav id="navmenu" class="navmenu">
        <ul>
          <li><a href="{{ path('app_reclamation_index') }}" class="active">Reclamations</a></li>
          <li><a href="{{ path('app_reclamation_new') }}">New Reclamation</a></li>
        </ul>
        <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
      </nav>
      <a class="btn-getstarted" href="{{ path('app_reclamation_new') }}">Get Started</a>
    </div>
  </header>

  <div class="container my-5">
    <h1 class="text-center mb-4">Edit Feedback</h1>
    {{ form_start(form) }}
      <div class="mb-3">
        {{ form_label(form.note) }}
        {{ form_widget(form.note, {'attr': {'class': 'form-control'}}) }}
      </div>
      <div class="mb-3">
        {{ form_label(form.commentaire) }}
        {{ form_widget(form.commentaire, {'attr': {'class': 'form-control', 'rows': '3'}}) }}
      </div>
      <button type="submit" class="btn btn-primary">Save changes</button>
    {{ form_end(form) }}

    <div class="mt-3 text-center">
      <a href="{{ path('app_feedback_index') }}" class="btn btn-outline-secondary">retour a la  liste</a>
    </div>
  </div>
{% endblock %}

{% block hero %}{% endblock %}
{% block about %}{% endblock %}
{% block features %}{% endblock %}
{% block pricing %}{% endblock %}
{% block contact %}{% endblock %}
{% block services %}{% endblock %}