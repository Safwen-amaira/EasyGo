{% extends 'base.html.twig' %}

{% block title %}Créer un utilisateur fidélité{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="card shadow-lg rounded-4 p-4 bg-light animate__animated animate__fadeIn">
        <h2 class="mb-4 text-center text-primary fw-bold">➕ Ajouter un nouvel utilisateur fidélité</h2>

        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
            <div class="row g-3">
                {% for field in form %}
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            {{ form_label(field, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                            {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(field) }}
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="mt-4 text-center">
                <button class="btn btn-success px-4 py-2 fw-bold">
                    ✅ Créer l'utilisateur
                </button>
            </div>
        {{ form_end(form) }}

        <div class="mt-3 text-center">
            <a href="{{ path('utilisateur_index') }}" class="btn btn-outline-secondary">
                ⬅️ Retour à la liste
            </a>
        </div>
    </div>
</div>
{% endblock %}
