{% extends 'base.html.twig' %}

{% block title %}Mon Profil Fid√©lit√©{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>

    <style>
        .fade-in {
            opacity: 0;
            transform: translateY(20px);
            animation: fadeInUp 1s ease forwards;
        }

        @keyframes fadeInUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .profile-gradient {
            background: linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%);
        }

        .profile-card {
            border-radius: 1.5rem;
            transition: transform 0.3s ease;
        }

        .profile-card:hover {
            transform: scale(1.02);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
        }

        .value-box {
            border-radius: 1rem;
            background: #ffffffcc;
            backdrop-filter: blur(10px);
            border: 1px solid #ffffff22;
        }

        .section-title {
            font-size: 1.7rem;
            font-weight: bold;
            background: linear-gradient(to right, #007bff, #6f42c1);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .table thead th {
            background-color: #f8f9fa;
            color: #333;
        }

        .badge-gradient {
            background: linear-gradient(135deg, #ff758c 0%, #ff7eb3 100%);
            color: white;
        }

        .glow {
            animation: glow 2s ease-in-out infinite alternate;
        }

        @keyframes glow {
            from {
                box-shadow: 0 0 5px #a18cd1;
            }
            to {
                box-shadow: 0 0 20px #fbc2eb;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="container py-5 fade-in">
 <div>
            <a href="{{ path('recompense_spin_page') }}" class="btn btn-success me-2">üé° Lancer la roue</a>
        </div>
    </div>
    <div class="profile-gradient p-5 text-white rounded-5 shadow-lg mb-5">
        <div class="text-center">
            <h1 class="fw-bold display-5 mb-2">‚ú® Espace Fid√©lit√©</h1>
            <p class="fs-5">Bienvenue <strong>{{ user.nomUtilisateur }}</strong> üëã</p>
        </div>

        <div class="row g-4 mt-4 text-dark">
            <div class="col-md-3">
                <div class="value-box p-4 text-center shadow-sm animate__animated animate__fadeInUp animate__delay-1s">
                    <h6 class="text-muted">Points</h6>
                    <h3 class="fw-bold text-success">{{ user.pointsAccumules }}</h3>
                </div>
            </div>
            <div class="col-md-3">
                <div class="value-box p-4 text-center shadow-sm animate__animated animate__fadeInUp animate__delay-1s">
                    <h6 class="text-muted">Trajets</h6>
                    <h3 class="fw-bold text-primary">{{ user.totalTrajetsEffectues }}</h3>
                </div>
            </div>
            <div class="col-md-3">
                <div class="value-box p-4 text-center shadow-sm animate__animated animate__fadeInUp animate__delay-1s">
                    <h6 class="text-muted">D√©pens√©</h6>
                    <h3 class="fw-bold text-danger">{{ user.totalMontantDepense }} TND</h3>
                </div>
            </div>
            <div class="col-md-3">
                <div class="value-box p-4 text-center shadow-sm animate__animated animate__fadeInUp animate__delay-1s">
                    <h6 class="text-muted">üìÖ Derni√®re mise √† jour</h6>
                    <h5 class="fw-semibold">{{ user.dateDerniereMiseAJour|date('d/m/Y') }}</h5>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <div class="progress" style="height: 15px;">
                <div class="progress-bar bg-success progress-bar-striped progress-bar-animated"
                     role="progressbar"
                     style="width: {{ (user.pointsAccumules / 100) * 100 }}%;"
                     aria-valuenow="{{ user.pointsAccumules }}"
                     aria-valuemin="0"
                     aria-valuemax="100">
                </div>
            </div>
            <small class="text-light">Objectif : 100 points</small>
        </div>
    </div>

    {% set hasSoonExpiring = false %}
    {% for r in recompenses %}
        {% if r.dateExpiration and r.dateExpiration|date('U') < (now|date('U') + 604800) %}
            {% set hasSoonExpiring = true %}
        {% endif %}
    {% endfor %}

    {% if hasSoonExpiring %}
        <div class="alert alert-warning text-center animate__animated animate__pulse animate__infinite">
            ‚ö†Ô∏è Certaines de vos r√©compenses expirent bient√¥t ! Profitez-en rapidement !
        </div>
    {% endif %}

    <div class="card profile-card p-4">
        <h3 class="section-title text-center mb-4">üéÅ Vos R√©compenses</h3>

        {% if recompenses is empty %}
            <div class="alert alert-info text-center">
                Aucune r√©compense obtenue pour le moment. Continuez √† gagner des points !
            </div>
        {% else %}
            <div class="table-responsive">
                <table class="table table-hover text-center align-middle rounded-3 overflow-hidden">
                    <thead>
                        <tr>
                                                    <th>#</th>

                            <th>Description</th>
                            <th>Type</th>
                            <th>Points requis</th>
                            <th>Bonus</th>
                            <th>Expiration</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for r in recompenses %}
                            <tr class="{% if r.dateExpiration and r.dateExpiration|date('U') < (now|date('U') + 604800) %}glow{% endif %}">
                                <td>{{ loop.index }}</td>
                                <td>{{ r.descriptionRecompense ?? '-' }}</td>
                                <td><span class="badge badge-gradient px-3 py-2">{{ r.typeRecompense ?? '‚Äî' }}</span></td>
                                <td><span class="badge bg-warning text-dark">{{ r.pointsRequis }} pts</span></td>
                                <td>
                                    {% if r.bonusPoints %}
                                        <span class="badge bg-success">{{ r.bonusPoints }} pts</span>
                                    {% else %}
                                        <span class="text-muted">‚Äî</span>
                                    {% endif %}
                                </td>
                                <td>{{ r.dateExpiration ? r.dateExpiration|date('d/m/Y') : '‚Äî' }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
