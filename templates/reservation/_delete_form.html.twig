<form method="post" action="{{ path('app_reservation_delete', {'id': reservation.id}) }}" 
      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer définitivement cette réservation ?');"
      class="mt-3">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.id) }}">
    <button class="btn btn-danger">
        <i class="bi bi-trash-fill"></i> Supprimer définitivement
    </button>
</form>