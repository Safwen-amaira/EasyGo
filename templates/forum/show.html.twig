{% extends 'base1.html.twig' %}

{% block title %}Détails du Forum{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Détails du Forum</h2>
        <a href="{{ path('app_forum_index') }}" class="btn btn-secondary">← Retour à la liste</a>
    </div>

    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <h3 class="card-title">{{ forum.nom }}</h3>
            <p class="card-text"><strong>Description :</strong> {{ forum.description }}</p>
            <p class="card-text"><strong>Date de création :</strong> {{ forum.date ? forum.date|date('d/m/Y') : 'Non précisée' }}</p>
        </div>
    </div>

    {# Section Statistiques #}
    <h4 class="mt-5 mb-3">Statistiques des Feedbacks</h4>
    
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            {% if stats.total > 0 %}
                <div class="row">
                    <div class="col-md-6">
                        <h5>Résumé</h5>
                        <p><strong>Nombre total de feedbacks :</strong> {{ stats.total }}</p>
                        <p><strong>Note moyenne :</strong> {{ stats.average }}/5</p>
                    </div>
                    <div class="col-md-6">
                        <h5>Distribution des notes</h5>
                        {% for i in 5..1 %}
                            <div class="mb-2">
                                <div class="d-flex justify-content-between">
                                    <span>{{ i }} étoile(s)</span>
                                    <span>{{ stats.distribution[i-1] }}%</span>
                                </div>
                                <div class="progress" style="height: 20px;">
                                    <div class="progress-bar bg-success" role="progressbar" 
                                         style="width: {{ stats.distribution[i-1] }}%" 
                                         aria-valuenow="{{ stats.distribution[i-1] }}" 
                                         aria-valuemin="0" 
                                         aria-valuemax="100"></div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>

                {# Bar Chart QuickChart #}
                <h5 class="mt-4">Graphique de répartition des notes</h5>
                <img 
                    src="https://quickchart.io/chart?c={{ {
                        type: 'bar',
                        data: {
                            labels: ['1 ★', '2 ★', '3 ★', '4 ★', '5 ★'],
                            datasets: [{
                                label: 'Pourcentage des notes',
                                data: stats.distribution,
                                backgroundColor: [
                                    '#ff4d4d', '#ff944d', '#ffd24d', '#b3e94d', '#4dff88'
                                ]
                            }]
                        },
                        options: {
                            responsive: true,
                            plugins: {
                                legend: { display: false },
                                title: {
                                    display: true,
                                    text: 'Répartition des notes'
                                }
                            },
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    max: 100,
                                    ticks: { stepSize: 20 }
                                }
                            }
                        }
                    }|json_encode|url_encode }}" 
                    alt="Graphique des feedbacks"
                    class="img-fluid border rounded shadow-sm my-3"
                />
            {% else %}
                <div class="alert alert-info">Aucun feedback pour calculer les statistiques.</div>
            {% endif %}
        </div>
    </div>

    {# Section Liste des Feedbacks #}
    <h4 class="mt-5 mb-3">Feedbacks</h4>

    {% if forum.feedback is not empty %}
        {% for feedback in forum.feedback %}
            <div class="card mb-3">
                <div class="card-body">
                    <p class="mb-1"><strong>Note :</strong> <span class="text-success">{{ feedback.note }}/5</span></p>
                    <p class="mb-0"><strong>Commentaire :</strong> {{ feedback.commentaire }}</p>
                </div>
            </div>
        {% endfor %}
    {% else %}
        <div class="alert alert-info">Aucun feedback pour ce forum.</div>
    {% endif %}
</div>
{% endblock %}
