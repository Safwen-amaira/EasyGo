{% extends 'base1.html.twig' %}

{% block title %}Liste des Forums{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">Liste des Forums</h1>
        <a href="{{ path('app_forum_new') }}" class="btn btn-success">Créer un nouveau forum</a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Description</th>
                    <th scope="col">Date</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for forum in forums %}
                    <tr>
                        <td>{{ forum.id }}</td>
                        <td>{{ forum.nom }}</td>
                        <td>{{ forum.description }}</td>
                        <td>{{ forum.date ? forum.date|date('d/m/Y') : '—' }}</td>
                        <td>
                            <a href="{{ path('app_forum_show', {'id': forum.id}) }}" class="btn btn-sm btn-outline-primary">Voir</a>
                            <a href="{{ path('app_forum_edit', {'id': forum.id}) }}" class="btn btn-sm btn-outline-secondary">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center text-muted">Aucun forum trouvé.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
