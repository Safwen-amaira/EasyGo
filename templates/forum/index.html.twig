{% extends 'base1.html.twig' %}

{% block title %}Liste des Forums{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-primary">Liste des Forums</h1>
        <a href="{{ path('app_forum_new') }}" class="btn btn-success btn-lg shadow-sm">Créer un nouveau forum</a>
    </div>

    <!-- Barre de recherche -->
    <div class="mb-4">
        <form method="get" action="{{ path('app_forum_index') }}" class="d-flex">
            <input type="text" name="search" value="{{ app.request.query.get('search') }}" class="form-control form-control-lg" placeholder="Rechercher un forum..." aria-label="Rechercher">
            <button type="submit" class="btn btn-outline-primary ms-2 btn-lg shadow-sm">Rechercher</button>
        </form>
    </div>

    <!-- Affichage des alertes -->
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Succès!</strong> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Erreur!</strong> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <!-- Tableau des forums -->
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle shadow-sm rounded">
            <thead class="table-primary">
                <tr>
                    <th scope="col" class="text-center">
                        <a href="{{ path('app_forum_index', {'sort': 'id'}) }}" class="text-dark">#</a>
                    </th>
                    <th scope="col" class="text-center">
                        <a href="{{ path('app_forum_index', {'sort': 'nom'}) }}" class="text-dark">Nom</a>
                    </th>
                    <th scope="col" class="text-center">Description</th>
                    <th scope="col" class="text-center">
                        <a href="{{ path('app_forum_index', {'sort': 'date'}) }}" class="text-dark">Date</a>
                    </th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for forum in forums %}
                    <tr>
                        <td class="text-center">{{ forum.id }}</td>
                        <td>{{ forum.nom }}</td>
                        <td>{{ forum.description }}</td>
                        <td class="text-center">{{ forum.date ? forum.date|date('d/m/Y') : '—' }}</td>
                        <td class="text-center">
                            <a href="{{ path('app_forum_show', {'id': forum.id}) }}" class="btn btn-sm btn-outline-info shadow-sm">
                                <i class="bi bi-eye"></i> Voir
                            </a>
                            <a href="{{ path('app_forum_edit', {'id': forum.id}) }}" class="btn btn-sm btn-outline-warning shadow-sm">
                                <i class="bi bi-pencil"></i> Modifier
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center text-muted">Aucun forum trouvé.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <!-- Pagination supprimée -->
</div>
{% endblock %}
