{% extends 'base.html.twig' %}

{% block title %}Modifier réservation{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-white">
                    <h2 class="h5 mb-0">
                        <i class="bi bi-pencil-square"></i> Modifier votre réservation pour {{ reservation.trip.departurePoint }} → {{ reservation.trip.destination }}
                    </h2>
                </div>
                
                <div class="card-body">
                    <div class="alert alert-info d-flex align-items-center">
                        <div>
                            <span class="fw-bold"><i class="bi bi-people-fill" style="color: #20c997;"></i> Places disponibles :</span> {{ reservation.trip.availableSeats + reservation.nombrePlaces }} | 
                            <span class="fw-bold"><i class="bi bi-coin" style="color: #ffc107;"></i> Contribution par place :</span> {{ reservation.trip.contribution }} DNT
                        </div>
                    </div>

                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-ticket-perforated" style="color: #0dcaf0;"></i> 
                                {{ form_label(form.nombre_places) }}
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-123" style="color: #6c757d;"></i>
                                </span>
                                {{ form_widget(form.nombre_places, {
                                    'attr': {
                                        'min': 1,
                                        'max': reservation.trip.availableSeats + reservation.nombrePlaces,
                                        'class': 'form-control'
                                    }
                                }) }}
                            </div>
                            <small class="text-muted">
                                <i class="bi bi-info-circle"></i> Maximum {{ reservation.trip.availableSeats + reservation.nombrePlaces }} places disponibles
                            </small>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-signpost-split" style="color:rgb(32, 20, 253);"></i> 
                                {{ form_label(form.lieu_escale) }}
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-geo-alt" style="color:rgb(17, 139, 246);"></i>
                                </span>
                                {{ form_widget(form.lieu_escale, {
                                    'attr': {
                                        'class': 'form-control',
                                        'placeholder': 'Ex: Avenue des Champs-Élysées'
                                    }
                                }) }}
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <label class="form-label">
                                <i class="bi bi-universal-access" style="color: #20c997;"></i> 
                                {{ form_label(form.type_handicap) }}
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-person-wheelchair" style="color: #6c757d;"></i>
                                </span>
                                {{ form_widget(form.type_handicap, {
                                    'attr': {
                                        'class': 'form-select',
                                    },
                                    'placeholder': 'Sélectionnez un type de handicap si nécessaire'
                                }) }}
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle-fill me-1"></i> Mettre à jour la réservation
                            </button>
                            <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}" class="btn btn-primary">
                                <i class="bi bi-arrow-left"></i> Retour à la réservation
                            </a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}