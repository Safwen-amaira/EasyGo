{# templates/reservation/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Nouvelle réservation{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="h5 mb-0">
                        <i class="bi bi-journal-plus"></i> Réservation pour le trajet {{ trip.departurePoint }} → {{ trip.destination }}
                    </h2>
                </div>
                
                <div class="card-body">
                    <div class="alert alert-info d-flex align-items-center">
                        <div>
                            <span class="fw-bold"><i class="bi bi-people-fill" style="color: #20c997;"></i> Places disponibles :</span> {{ trip.availableSeats }} | 
                            <span class="fw-bold"><i class="bi bi-coin" style="color: #ffc107;"></i> Contribution par place :</span> {{ trip.contribution }} DNT
                        </div>
                    </div>
                    
                    {{ form_start(form) }}
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-ticket-perforated" style="color: #0dcaf0;"></i> 
                                {{ form_label(form.nombre_places) }}
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-123" style="color: #6c757d;"></i>
                                </span>
                                {{ form_widget(form.nombre_places, {
                                    'attr': {
                                        'min': 1,
                                        'max': trip.availableSeats,
                                        'class': 'form-control'
                                    }
                                }) }}
                            </div>
                            <small class="text-muted">
                                <i class="bi bi-info-circle"></i> Maximum {{ trip.availableSeats }} places disponibles
                            </small>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-signpost-split" style="color: #fd7e14;"></i> 
                                {{ form_label(form.lieu_escale) }}
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-geo-alt" style="color: #6c757d;"></i>
                                </span>
                                {{ form_widget(form.lieu_escale, {
                                    'attr': {
                                        'class': 'form-control',
                                    
                                    }
                                }) }}
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <label class="form-label">
                                <i class="bi bi-universal-access" style="color: #20c997;"></i> 
                                {{ form_label(form.type_handicap) }}
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-person-wheelchair" style="color: #6c757d;"></i>
                                </span>
                                {{ form_widget(form.type_handicap, {
                                    'attr': {
                                        'class': 'form-select',
                                    },
                                    'placeholder': 'Sélectionnez un type de handicap si nécessaire'
                                }) }}
                            </div>
                        </div>
                        
                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle-fill me-1"></i> Confirmer la réservation
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}