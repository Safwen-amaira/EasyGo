{% extends 'base.html.twig' %}

{% block title %}Liste des Réservations{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card border-0 shadow-lg rounded-lg overflow-hidden">
                <!-- En-tête amélioré avec dégradé -->
                <div class="card-header py-3" style="background: linear-gradient(135deg, #1e88e5 0%, #0d47a1 100%);">
                    <div class="d-flex justify-content-between align-items-center">
                        <h1 class="h4 mb-0 text-white">
                            <i class="bi bi-journal-check mr-2"></i> Liste des réservations
                        </h1>
                        <a href="{{ path('app_trip_home_client') }}" class="btn btn-sm btn-light rounded-pill" style="color: #0d47a1;">
                            <i class="bi bi-car-front me-1"></i> Nouvelle réservation
                        </a>
                    </div>
                </div>

                <!-- Section Recherche et Filtres améliorée -->
                <div class="card-body border-bottom">
                    <div class="row align-items-center mb-3">
                        <div class="col-md-6 mb-2 mb-md-0">
                            <form method="get" action="{{ path('app_reservation_index') }}" class="form-inline">
                                <div class="input-group">
                                    <input type="text" name="search" class="form-control rounded-start" 
                                           placeholder="Rechercher par statut, départ ou destination..." 
                                           value="{{ searchTerm|default('') }}">
                                    <button type="submit" class="btn btn-primary rounded-end">
                                        <i class="bi bi-search"></i> Rechercher
                                    </button>
                                    {% if searchTerm %}
                                        <a href="{{ path('app_reservation_index') }}" class="btn btn-outline-secondary ms-2 rounded">
                                            <i class="bi bi-x-lg"></i> Réinitialiser
                                        </a>
                                    {% endif %}
                                </div>
                            </form>
                        </div>
                        <div class="col-md-6 text-md-end">
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-outline-light dropdown-toggle" data-bs-toggle="dropdown">
                                    <i class="bi bi-sort-down"></i> Trier
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><h6 class="dropdown-header">Trier par :</h6></li>
                                    <li><a class="dropdown-item" href="#">Date (récent)</a></li>
                                    <li><a class="dropdown-item" href="#">Montant</a></li>
                                    <li><a class="dropdown-item" href="#">Statut</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Tableau amélioré -->
                <div class="card-body px-0 py-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="bg-light">
                                <tr>  
                                    <th class="text-primary">Ref</th>
                                    <th class="text-primary">Trajet</th>
                                    <th class="text-primary">Date</th>
                                    <th class="text-primary">Itinéraire</th>
                                    <th class="text-primary">Places</th>
                                    <th class="text-primary">Montant</th>
                                    <th class="text-primary">Statut</th>
                                    <th class="text-primary">QR Code</th>
                                    <th class="text-primary">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for reservation in pagination %}
                                <tr>
                                    <td>RES-{{ reservation.id }}</td>
                                    <td>TRP-{{ reservation.trip.id }}</td>
                                    <td>{{ reservation.dateReservation|date('d/m/Y H:i') }}</td>
                                    <td>
                                        {{ reservation.trip.departurePoint }} 
                                        <i class="bi bi-arrow-right mx-1 text-muted"></i> 
                                        {{ reservation.trip.destination }}
                                    </td>
                                    <td>
                                        <span class="badge bg-primary bg-opacity-10 text-primary rounded-pill">
                                            {{ reservation.nombrePlaces }}
                                        </span>
                                    </td>
                                    <td class="fw-bold">{{ reservation.montantTotal }} DNT</td>
                                    <td>
                                        {% if reservation.etatReservation|lower in ['confirmé', 'confirmee'] %}
                                            <span class="badge bg-success bg-opacity-10 text-success rounded-pill">
                                                Confirmée
                                            </span>
                                        {% elseif reservation.etatReservation|lower in ['refusé', 'refusee'] %}
                                            <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill">
                                                Refusée
                                            </span>
                                        {% else %}
                                            <span class="badge bg-warning bg-opacity-10 text-warning rounded-pill">
                                                En attente
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if reservation.etatReservation|lower in ['confirmé', 'confirmee'] %}
                                            <a href="{{ path('app_reservation_qrcode', {'id': reservation.id}) }}" 
                                               class="btn btn-sm btn-outline-primary rounded-pill"
                                               title="Voir QR Code">
                                                <i class="bi bi-qr-code"></i>
                                            </a>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="d-flex gap-2">
                                            <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}" 
                                               class="btn btn-sm btn-outline-info rounded-pill"
                                               title="Voir détails">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <form method="post" action="{{ path('app_reservation_delete', {'id': reservation.id}) }}"
                                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette réservation ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.id) }}">
                                                <button class="btn btn-sm btn-outline-danger rounded-pill" title="Supprimer">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="9" class="text-center py-4 text-muted">
                                        <i class="bi bi-info-circle me-2"></i>Aucune réservation trouvée
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Pied de page amélioré -->
                <div class="card-footer bg-light py-3">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <small class="text-muted">
                                Affichage de <b>{{ pagination.getPaginationData.firstItemNumber }}</b> à <b>{{ pagination.getPaginationData.lastItemNumber }}</b> sur <b>{{ pagination.getTotalItemCount }}</b> réservations
                            </small>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex justify-content-end">
                                {{ knp_pagination_render(pagination, null, {}, {
                                    'align': 'center',
                                    'size': 'small',
                                    'rounded': true,
                                }) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    /* Styles améliorés */
    .table-hover tbody tr:hover {
        background-color: rgba(30, 136, 229, 0.1);
        transform: translateY(-1px);
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    .table th {
        border-top: none;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.5px;
        padding: 1rem 1.5rem;
    }
    .table td {
        padding: 1rem 1.5rem;
        vertical-align: middle;
        transition: all 0.2s ease;
    }
    .badge {
        padding: 0.35rem 0.65rem;
        font-weight: 500;
    }
    .btn-sm.rounded-pill {
        padding-left: 0.75rem;
        padding-right: 0.75rem;
    }
    .card-header {
        border-bottom: none;
    }
</style>
{% endblock %}