{% extends 'base.html.twig' %}

{% block title %}Confirmation de réservation{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h2 class="h5 mb-0">Confirmation de votre réservation</h2>
                        <div class="btn-group">
                            <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil-fill"></i> Modifier
                            </a>
                            <form method="post" action="{{ path('app_reservation_delete', {'id': reservation.id}) }}" 
                                  onsubmit="return confirm('Êtes-vous sûr de vouloir annuler cette réservation ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.id) }}">
                                <button class="btn btn-sm btn-danger ms-2">
                                    <i class="bi bi-trash-fill"></i> Supprimer
                                </button>
                            </form>
                        </div>
                </div>
                
                <div class="card-body">
                    <div class="alert alert-success">
                        <i class="bi bi-check-circle-fill"></i> 
                        Votre réservation a été enregistrée avec succès !
                    </div>

                    <h3 class="h4">Détails du trajet</h3>
                    <div class="mb-4">
                        <p><strong>Départ:</strong> {{ reservation.trip.departurePoint }}</p>
                        <p><strong>Destination:</strong> {{ reservation.trip.destination }}</p>
                        <p><strong>Date du trajet:</strong> {{ reservation.trip.tripDate|date('d/m/Y ') }}</p>
                        {% if reservation.trip.user is defined %}
                            <p><strong>Conducteur:</strong> {{ reservation.trip.user.fullName }}</p>
                        {% endif %}
                    </div>

                    <h3 class="h4">Détails de la réservation</h3>
                    <div class="mb-4">
                        <p><strong>Date de réservation:</strong> {{ reservation.dateReservation|date('d/m/Y ') }}</p>
                        <p><strong>Nombre de places réservées:</strong> {{ reservation.nombrePlaces }}</p>
                        <p><strong>Montant total:</strong> {{ reservation.montantTotal }} DNT</p>
                        <p><strong>Statut:</strong> 
                            <span class="badge bg-{{ reservation.etatReservation == 'confirmé' ? 'success' : 'warning' }}">
                                {{ reservation.etatReservation }}
                            </span>
                        </p>
                        
                        {% if reservation.lieuEscale %}
                            <p><strong>Lieu d'escale:</strong> {{ reservation.lieuEscale }}</p>
                        {% endif %}
                        
                        {% if reservation.typeHandicap %}
                            <p><strong>Type de handicap:</strong> {{ reservation.typeHandicap }}</p>
                        {% endif %}
                    </div>

                    <div class="alert alert-info">
                        <i class="bi bi-info-circle-fill"></i> 
                        {% if reservation.etatReservation == 'confirmé' %}
                            Votre réservation est confirmée. Vous recevrez un email avec les détails du trajet.
                        {% else %}
                            Votre réservation est en attente de confirmation. Vous recevrez un email une fois confirmée.
                        {% endif %}
                    </div>

                    <div class="d-grid gap-2">
                        <a href="{{ path('app_trip_index') }}" class="btn btn-primary">
                            <i class="bi bi-arrow-left"></i> Retour aux trajets
                        </a>
                        {% if is_granted('ROLE_USER') and app.user == reservation.user %}
                            <a href="{{ path('app_reservation_index') }}" class="btn btn-outline-primary">
                                <i class="bi bi-list-ul"></i> Mes réservations
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}